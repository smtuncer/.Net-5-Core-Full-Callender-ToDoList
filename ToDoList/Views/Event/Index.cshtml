@model IEnumerable<ToDoList.Models.Events>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2 style="text-align:center">ETKİNLİK LİSTESİ</h2>
    <table id="myTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Başlık
                </th>
                <th>
                    Başlangıç Tarihi
                </th>
                <th>
                    Bitiş Tarihi
                </th>
                <th>
                    Renk
                </th>
                <th>
                    Yazı Rengi
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @(((DateTime)item.start).ToString("MM/dd/yyyy HH:mm"))
                    </td>
                    <td>
                        @(((DateTime)item.end).ToString("MM/dd/yyyy HH:mm"))
                    </td>
                    <td>
                        <input type="color" disabled value="@Html.DisplayFor(modelItem => item.color)">
                    </td>
                    <td>
                        <input type="color" disabled value="@Html.DisplayFor(modelItem => item.textColor)">
                    </td>
                    <td>
                        <a asp-action="EventGüncelle" asp-route-id="@item.id" class="btn btn-success"><i style="margin-right:0.2rem" class="bi bi-pencil"></i>Düzenle</a> |
                        <a asp-action="EventSil" asp-route-id="@item.id" class="btn btn-danger"><i style="margin-right:0.2rem" class="bi bi-trash"></i>Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <br />
    <br />
    <a class="btn btn-primary btn-block" asp-area="" asp-controller="Event" asp-action="EventEkle">ETKİNLİK EKLE</a>
    <a class="btn btn-success btn-block" asp-area="" asp-controller="Home" asp-action="Index">ETKİNLİK TAKVİMİ</a>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>
}
