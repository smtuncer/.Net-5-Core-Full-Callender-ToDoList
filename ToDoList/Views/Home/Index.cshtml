
@{
    ViewData["Title"] = "Home Page";
}
<div id="myModalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="text-align:center">ETKİNLİK GÜNCELLE</h4>
            </div>
            <div class="modal-body">
                <form class="col-md-12 form-horizontal">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" id="txtSubjectEdit" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Başlangıç Tarihi</label>
                        <div class="input-group date" id="dtp1Edit">
                            <input type="datetime-local" id="txtStartEdit" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group" id="divEndDateEdit">
                        <label>Bitiş Tarihi</label>
                        <div class="input-group date" id="dtp2Edit">
                            <input type="datetime-local" id="txtEndEdit" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Renk</label>
                        <input type="color" id="ddThemeColorEdit" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Yazı Rengi</label>
                        <input type="color" id="ddThemeColor2Edit" class="form-control" />
                    </div>
                    <button type="button" id="btnEdit" class="btn btn-info">Güncelle</button>
                    <button type="button" id="btnDelete" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>
